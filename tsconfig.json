{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "preserveWatchOutput": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "**/views"
  ],
  "skipLibCheck": true
}
